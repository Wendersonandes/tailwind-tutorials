<div class="bg-white border rounded-lg overflow-hidden">
  <img src="<%= @imageUrl %>" alt="<%= @imageAlt %>">
  <div class="p-6">
    <div class="flex text-xs uppercase font-semibold tracking-wide items-baseline">
      <span class="inline-block bg-teal-200 text-teal-700 px-2 mr-2 rounded-full">New</span>
      <div class="text-gray-600">
        <%= @beds %> beds &bull; <%= @baths %> baths
      </div>
    </div>
    <h4 class="font-semibold text-lg leading-tight truncate mt-1"><%= @title  %></h4>

    <div class="mt-1">
      <%= @formattedPrice %> 
      <span class="text-gray-600 text-sm">/ wk</span>
    </div>

    <div class="mt-4 flex items-center">
      <% (1..5).each do |i| %>
        <svg class="h-4 w-4 fill-current <%= star_class(i, @rating) %> " xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
      <% end %>
      <span class="ml-2 text-gray-600 text-sm"><%= "#{ @reviewCount } reviews" %></span>
    </div>
  </div>
</div>
