<div class="bg-white border rounded-lg overflow-hidden">
  <img src="<%= @imageUrl %>" alt="<%= @imageAlt %>">
  <div class="p-6">
    <div class="text-gray-600 text-xs uppercase font-semibold tracking-wide">
      <%= @beds %> beds &bull; <%= @baths %> baths
    </div>
    <h4 class="font-semibold text-lg leading-tight truncate"><%= @title  %></h4>

    <div class="mt-1">
      <%= @formattedPrice %> 
      <span class="text-gray-600 text-sm">/ wk</span>
    </div>

    <div class="mt-4">
      <span class="text-teal-600 font-semibold"><%= "#{@rating} / 5 stars" %></span>
      <span class="text-gray-600 text-sm"><%= "(based on #{ @reviewCount } reviews)" %></span>
    </div>
  </div>
</div>
